@using DesignPatternsASP.Models.ViewModels
@model IEnumerable<BeerViewModel>

<div class="row">
    <div class="col-12">
        <a class="btn btn-primary" href="~/beer/Add">Nueva Cerveza</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table">
            <tr>
                <th>Nombre</th>
            </tr>
            @foreach (var beer in Model){
                <tr>
                    <td>@beer.Name</td>
                </tr>
            }
        </table>
    </div>
</div>
